{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@services/*": ["src/services/*"],
      "@languages/*": ["src/app/assets/languages/*"],
      "@assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"],
      "@utils/*": ["src/app/utils/*"],
    },
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
