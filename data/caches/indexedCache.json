{
  "distributed-cache": {
    "mode": "SYNC",
    "encoding": {
      "key": {
        "media-type": "text/plain"
      },
      "value": {
        "media-type": "application/x-protostream"
      }
    },
    "memory": {
      "storage": "HEAP"
    },
    "indexing": {
      "indexed-entities": [
        "org.infinispan.Person"
      ],
      "enabled": true
    },
    "security": {
      "authorization": {
        "enabled": true,
        "roles": [
          "observer",
          "admin",
          "monitor"
        ]
      }
    },
    "statistics": true
  }
}
